#loading{
	background-color: rgba(255,255,255,1);
	height: 100%;
	width: 100%;
	position: fixed;
	z-index: 999;
	margin-top: 0px;
	top: 0px;
}
#loading-center{
	width: 100%;
	height: 100%;
	position: relative;
}
#loading-center-absolute {
	position: absolute;
	left: 50%;
	top: 40%;
	height: 150px;
	width: 150px;
	margin-top: -75px;
	margin-left: -75px;
}

#loading-center-absolute .stage{
	width: 80px;
	height: 89.7px;
	margin: 100px auto;
	perspective: 10000px;
	/*perspective-origin: 10% 10%;*/
	perspective-origin: 60% 60%;
}
#loading-center-absolute .container{
	width: 80px;
	height: 89.7px;
	opacity: 0.8;
	transform-style: preserve-3d;
	transform: 1s linear;	
}
#loading-center-absolute img{
	width: 80px;
	height: 89.7px;
}